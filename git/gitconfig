[init]
	defaultBranch = main

[pull]
	rebase = false

[core]
	pager = less -FRX
	excludesfile = ~/.gitignore_global

# Allow local customizations in the .gitconfig_local file
[include]
	path = ~/.gitconfig_local
[url "https://github.com/"]
	insteadOf = git@github.com:
[url "https://"]
	insteadOf = git://
[checkout]
	guess = false
