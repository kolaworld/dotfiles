[init]
	defaultBranch = main

[pull]
	rebase = false

[core]
	pager = less -FRX
	excludesfile = ~/.gitignore_global

# Allow local customizations in the .gitconfig_local file
[include]
	path = ~/.gitconfig_local

# only show local branches on auto-complete
# [checkout]
#    guess = false

# Enforce https over SSH
# [url "https://github.com/"]
#	insteadOf = git@github.com:
# [url "https://"]
#	insteadOf = git://

# Enforce SSH over https
[url "git://"]
	insteadOf = https://
[url "git@github.com:"]
	insteadOf = https://github.com
